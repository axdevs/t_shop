<h1>List of all articles </h1>

<br/><br/>


<table>
<tr>
<th>Name</th>
<th>Description</th>
<th>Price</th>
<th>Details</th>
<th>Modify</th>
<th>Destroy</th>
</tr>
<% @articles.each do |ar| %>
<tr>
<td><%= ar.title %></td>
<td><%= ar.description %></td>
<td><%= ar.price %></td>
<td><%= link_to "Show", article_path(ar) %></td>
<td><%= link_to "Edit", edit_article_path(ar) %></td>
<td><%= link_to "Destroy", article_path(ar), method: :delete, data: {confirm: "Are you sur?"} %></td>
</tr>
<% end %>
</table>


